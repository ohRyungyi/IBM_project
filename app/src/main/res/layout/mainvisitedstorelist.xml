<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round5"
    android:id="@+id/totalView">
    <ImageView
        android:id="@+id/storeimage"
        android:layout_weight="15"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="7dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/storeName"
                android:fontFamily="@font/nanumsquareb"
                android:textSize="16dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="right"
                android:id="@+id/distance"
                android:textColor="#00A4FF"
                android:textSize="12dp"
                android:fontFamily="@font/nanumsquaredb"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/location"
            android:layout_marginTop="7.9dp"
            android:textColor="#828282"
            android:fontFamily="@font/nanumsquareb"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/state"
                android:background="@drawable/round5gray"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:fontFamily="@font/nanumsquaredb"
                android:textColor="#828282"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_gravity="right"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:gravity="center_vertical"
                        android:textColor="#0077FF"
                        android:fontFamily="@font/nanumsquaredb"
                        android:textSize="12dp"
                        android:id="@+id/daysago"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_marginRight="2dp"
                        android:gravity="right|center_vertical"
                        android:text=" 이용"
                        android:fontFamily="@font/nanumsquaredb"
                        android:textSize="12dp"
                        android:textColor="#000000"
                        android:layout_toRightOf="@+id/daysago"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>